{
  "name": "srt-8192",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "generate:env": "node scripts/generate-all-env.js",
    "generate:env:backend": "cd backend && node scripts/generate-env.js",
    "generate:env:frontend": "cd frontend && node scripts/generate-env.js",
    "generate:docker": "node scripts/generate-dockerfiles.js",
    "setup": "npm install && npm run generate:docker && npm run generate:env && docker build -t srt-8192/base-service:latest ./backend/services/base",
    "dev": "npm run setup && docker-compose up --build",
    "build": "npm run generate:env && docker-compose build",
    "start": "docker-compose up",
    "down": "docker-compose down",
    "clean": "docker-compose down -v",
    "logs": "docker-compose logs -f",
    "test": "cd backend && npm test && cd ../frontend && npm test",
    "health": "node scripts/health-check.js",
    "health:db": "node scripts/db-check.js",
    "health:all": "npm run health && npm run health:db"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "chalk": "^4.1.2"
  }
}