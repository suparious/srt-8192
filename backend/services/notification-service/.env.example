# Service Configuration
NODE_ENV=development
PORT=3000
SERVICE_NAME=base-service
LOG_LEVEL=info

# MongoDB Configuration
MONGODB_URI=mongodb://mongodb:27017/srt8192
MONGODB_USER=
MONGODB_PASSWORD=

# Redis Configuration
REDIS_URI=redis://redis:6379
REDIS_PASSWORD=

# Service Dependencies
USER_SERVICE_URL=http://user:5012
NOTIFICATION_SERVICE_URL=http://notifications:5007
GAME_LOGIC_SERVICE_URL=http://game-logic:5001

# Security
JWT_SECRET=your-jwt-secret-here
SESSION_SECRET=your-session-secret-here

# Feature Flags
ENABLE_DEBUGGING=true
ENABLE_METRICS=true

# Performance Tuning
CONNECTION_POOL_SIZE=10
REQUEST_TIMEOUT_MS=5000
HEALTH_CHECK_INTERVAL_MS=30000